<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1> the Message Board</h1>

    <form action='/post' method='post'>
      Name:<input type='text' name='name' />
      Message:<input type='text' name='post' />
      <input type='submit' value='Add New Post' />
    </form>

    <% if(typeof(errors) != 'undefined' ) { %>
 	     <% for (var x in errors) { %>
 	      <h3><%= errors[x].post %></h3>
        <h3><%= errors[x].post.comments %></h3>
 	     <% } %>
  	 <% } else { %>


  	 	<div>
 			<% for(let x of post) { %>
 				<div>
 					<h3>Name: <%= x.name %></h3>
 					<h3>Message: <%= x.post %></h3>

 					<% for (let y of x.comments) { %>
 						<h5><%="Name: " + y.name %></h5>
 						<h5><%="Comment: " + y.comment %></h5>
 					<% } %>

 					<form action=<%="/comment/" + x._id %> method="post">
 						<p class="margin">Name: </p><input class="comment_input" type="text" name="name">
 						<p class="margin">Comment: </p><textarea class="comment_text"name="comment"></textarea>
 						<input class="post2" type="submit" value="Post comment">
 					</form>
 				</div>
 			<% } %>
 		</div>
  	<% } %>


  </body>
</html>
